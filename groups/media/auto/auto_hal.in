update_codec() {
case "$(cat /proc/fb)" in
        *i915drmfb)
                echo "intel"
                setprop vendor.intel.video.codec hardware
                ;;
        *inteldrmfb)
                echo "intel"
                setprop vendor.intel.video.codec hardware
                ;;
        *)
                echo "software codec"
                setprop debug.stagefright.ccodec 0
                setprop vendor.intel.video.codec software
                ;;
esac
}
update_codec
